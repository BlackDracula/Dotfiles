[color]
white = #FFFFFF
red = #e53935
light_green = #28bd6b
dunno = #5c889c
shade1 = #0f111a
bground = #0f111a
fground = #f7f7f7
accent = #31323a
modulefg = #f7f7f7
modulefg-alt = #f7f7f7


[bar/main]
monitor = eDP-1
dpi = 192
include-file = ~/.config/polybar/fullbar
background = ${color.bground}
foreground = ${color.fground}
overline-size = 2
overline-color = ${color.accent}
modules-left = workspaces title
modules-center =
modules-right = Playing battery volume backlight eth date poweroff


;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;

[module/date]
type = internal/date
interval = 1.0
time = %H: %M 
time-alt = %a %d %b
label ="%time%"
label-alt =
format = <label>
format-padding = 1


[module/backlight]
type = custom/script
exec = ~/bin/light.sh
scroll-up = exec light -A 5
scroll-down = exec light -U 5
format-prefix = " "
label = %output%


[module/battery]
type = internal/battery
battery = BAT0
adapter = AC90
poll-interval = 0
format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>
format-charging = <ramp-capacity> <label-charging> 
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 


[module/volume]
type = internal/volume
format-volume =   <ramp-volume>  <label-volume>
format-muted = 0%  
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 


[module/poweroff]
type = custom/script
exec = ~/bin/arch.sh
;format-prefix = "  "
;format-prefix = "FF"
click-left = rofi -modi run,drun,window -show drun
click-right = i3lock-fancy -pg &
click-middle = /usr/bin/rofi-logout
format-padding = 1
label = %output%


[module/eth]
type = internal/network
interface = wlp6s0
interval = 1.0
format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #eceff4
label-connected = %downspeed:9%
format-disconnected = <label-disconnected>
label-disconnected = not connected
label-disconnected-foreground = #66ffffff
format-padding = 0


[module/title]
type = internal/xwindow
format = <label>
format-padding = 1
label = " %title%"
label-maxlen = 50
label-empty = "  Arch Linux"


[module/workspaces]
type = internal/bspwm
pin-workspaces = true
enable-click = true
enable-scroll = true
format = <label-state>
format-background = ${color.shade1}
format-foreground = ${color.shade1}
label-monitor = %name%
label-focused-foreground = ${color.dunno}
label-occupied-foreground = ${color.accent}
label-urgent-foreground = ${color.red}
label-empty-foreground = ${color.modulefg-alt}
label-focused-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1

[module/Playing]
type = custom/script
exec = ~/bin/playing.sh
format-prefix = " "
interval = 0.1
label-font = 0
click-left = sp play
format-padding = 1

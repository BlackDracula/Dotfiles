[module/backlight]
type = custom/script
exec = ~/.config/bin/light.sh
scroll-up = exec light -A 5
scroll-down = exec light -U 5
update-interval = 1
format-prefix = " "
label = "%output%"


[module/date]
type = internal/date
time = %H:%M
time-alt = %a %d %b
format-background = ${color.dunno}
format-foreground = ${color.fground}
label =" %time% "


[module/downspeed]
type = internal/network

# web browser
super + w
    brave

#terinal emulator
super + Return
    kitty

# file manager
super + f
    kitty -e ranger

# program launcher
super + @space
    exec $HOME/.config/bin/rofi_run

super + i
    exec rofi -modi "clipboard:greenclip print" -show clipboard -font "Fira Code 14"

#dmenu_run
alt + @space
    dmenu_run -fn FiraCode

# make sxhkd reload its configuration files:
super + shift + r
    pkill -USR1 -x sxhkd

#spotify next
super + ctrl + l
    sp next

#spotify prev
super + ctrl + h
    sp prev

#spotify play
super + Home
    sp play

#systemctl suspend
super + Delete
    systemctl suspend

#sometimes i hate zsh-auto-suggestion
#super + ctrl + Delete
#   clean_history

#system volume increase with 10%
super + ctrl + k
    pactl -- set-sink-volume 0 +10%

#system volume decrease with 10%
super + ctrl + j
    pactl -- set-sink-volume 0 -10%

# quit bspwm normally
super + x
    rofi_run -l

# close and kill
super + {_,shift + }q
    bspc node -{c,k}

# alternate between the tiled and monocle layout
super + shift + z
    bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
    bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
    bspc node -s biggest

#
# state/flags
#

# set the window state
super + shift + {t,shift + t,s,f}
    bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
    bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
    bspc node -f @{parent,brother,first,second}

# focus the next node in the screen left/right
super + ctrl {_,shift } + h
    bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
    bspc desktop -f {next}.local

# focus the last node/desktop
super + {grave,Tab}
    bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
    bspc wm -h off; \
    bspc node {older,newer} -f; \
    bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
#super + ctrl + {h,j,k,l}
#    bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
    bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
    bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
    bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
    bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
ctrl + alt + {h,j,k,l}
    bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
    bspc node -v {-5 0,0 5,0 -5,5 0}

# move a floating window fast lol
super + shift + ctrl {Left,Down,Up,Right}
    bspc node -v {-30 0,0 30,0 -30,30 0}


# flameshot full screen
Print
    flameshot full -p $HOME/Screenshots/

# flameshot gui
Print + shift
    flameshot gui -p $HOME/Screenshots/clip

#rofi green cipboard
super + v
    rofi -modi "clipboard:greenclip print" -show clipboard -run-command '{cmd}' -font "Fira Code 10"

# spotify Stuff
super + s
    spotify --disable-gpu

# typora
super + shift + t
    typora

# telegram
super + t
    telegram-desktop

# Spotify
super + s
    spotify
